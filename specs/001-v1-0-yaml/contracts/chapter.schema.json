{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sutra-guide.example.com/schemas/chapter.v1.json",
  "title": "Chapter Content Schema",
  "description": "Schema for Buddhist sutra chapter content files (chapter-N.yml)",
  "type": "object",
  "required": [
    "schemaVersion",
    "sutraId",
    "title",
    "originalText"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Schema version (semver format)",
      "examples": ["1.0", "1.0.0"]
    },
    "sutraId": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Parent sutra identifier (must match a sutra meta.yml id)",
      "examples": ["heart-sutra", "diamond-sutra"]
    },
    "number": {
      "type": "integer",
      "minimum": 0,
      "description": "Chapter sequence number (must match filename chapter-N.yml)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Chapter title",
      "examples": ["第一品", "觀自在菩薩品"]
    },
    "volume": {
      "type": "integer",
      "minimum": 1,
      "description": "Volume number (for multi-volume sutras like Samyukta Agama)"
    },
    "volumeTitle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Volume title (e.g., '雜阿含經卷第一')"
    },
    "gist": {
      "type": "string",
      "description": "Brief summary/essence of the chapter (1-2 sentences)"
    },
    "originalText": {
      "type": "string",
      "minLength": 1,
      "description": "Classical Chinese text (multi-paragraph, separated by double newlines)"
    },
    "translation": {
      "type": "string",
      "description": "Modern Chinese vernacular translation (multi-paragraph)"
    },
    "detailedExplanation": {
      "type": "array",
      "description": "Paragraph-by-paragraph explanation",
      "items": {
        "type": "object",
        "required": ["original"],
        "properties": {
          "original": {
            "type": "string",
            "minLength": 1,
            "description": "Original sutra text segment"
          },
          "translation": {
            "type": "string",
            "minLength": 1,
            "description": "Vernacular translation of the original text segment"
          },
          "commentary": {
            "type": "string",
            "minLength": 1,
            "description": "Commentary on the segment"
          },
          "commentaryTranslation": {
            "type": "string",
            "minLength": 1,
            "description": "Vernacular translation of the commentary"
          }
        },
        "additionalProperties": false
      }
    },
    "annotations": {
      "type": "array",
      "description": "Optional commentary array",
      "items": {
        "type": "object",
        "required": ["paragraph", "text", "source"],
        "properties": {
          "paragraph": {
            "type": "integer",
            "minimum": 1,
            "description": "Which paragraph of originalText (1-indexed)"
          },
          "text": {
            "type": "string",
            "minLength": 1,
            "description": "Annotation content"
          },
          "source": {
            "type": "string",
            "minLength": 1,
            "description": "Citation (REQUIRED per constitution)"
          }
        },
        "additionalProperties": false
      }
    },
    "practiceInsights": {
      "type": "string",
      "description": "Optional practice guidance (multi-paragraph)"
    },
    "illustrations": {
      "type": "array",
      "description": "Optional images array",
      "items": {
        "type": "object",
        "required": ["url", "alt"],
        "properties": {
          "url": {
            "type": "string",
            "pattern": "^/",
            "description": "Relative path to image (must start with /)",
            "examples": ["/images/heart-sutra/image1.jpg"]
          },
          "alt": {
            "type": "string",
            "minLength": 1,
            "description": "Accessibility description (REQUIRED for WCAG AA)"
          },
          "caption": {
            "type": "string",
            "description": "Optional visible caption"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the illustration content and symbolism"
          },
          "style": {
            "type": "string",
            "description": "Art style description (e.g., '古印度插畫風格', '佛教細密畫風格')"
          }
        },
        "additionalProperties": false
      }
    },
    "podcastTitle": {
      "type": "string",
      "description": "Optional podcast episode title"
    },
    "podcastUrl": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "External podcast episode URL (must be http:// or https://)",
      "examples": ["https://example.com/podcast/heart-sutra-ep1"]
    },
    "transcript": {
      "type": "string",
      "description": "Podcast episode transcript (multi-paragraph, separated by double newlines)"
    },
    "videoUrl": {
      "type": "string",
      "description": "Video lecture/explanation URL (supports Google Vids, YouTube embed, or relative file path)",
      "examples": [
        "https://www.youtube.com/embed/VIDEO_ID",
        "https://docs.google.com/videos/d/VIDEO_ID/preview",
        "/content/samyukta-agama/video-563.mp4"
      ]
    },
    "videoTitle": {
      "type": "string",
      "description": "Optional video episode display title (clearer than chapter title)"
    },
    "audioUrl": {
      "type": "string",
      "description": "Audio lecture/explanation URL (supports direct file path, SoundCloud, or YouTube audio)",
      "examples": [
        "/content/samyukta-agama/audio-563.m4a",
        "https://soundcloud.com/player/?url=...",
        "https://www.youtube.com/embed/AUDIO_VIDEO_ID"
      ]
    },
    "audioTitle": {
      "type": "string",
      "description": "Optional audio episode display title (clearer than chapter title)"
    },
    "sourceAttribution": {
      "type": "string",
      "description": "Chapter-specific source citation (if differs from sutra-level)"
    }
  },
  "additionalProperties": false
}
